{
  "name": "pangea-vue-table",
  "version": "0.0.2",
  "description": "Vue table plugin with advanced features",
  "type": "module",
  "author": {
    "name": "Pothuraju <sriramkumar.pothuraju@gmail.com>",
    "url": "https://github.com/pothuraju-dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pothuraju-dev/vue-table.git"
  },
  "keywords": [
